<assembly>
    <id>resources</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <!-- Take everything inside the units folder -->
            <directory>units</directory>
            <!-- Place the zip in the target folder -->
            <outputDirectory>/</outputDirectory>
            <!-- Excluding pom -->
            <excludes>
                <exclude>**/pom.xml</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>